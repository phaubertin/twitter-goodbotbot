{
    "AWSTemplateFormatVersion" : "2010-09-09",

    "Description" : "GoodBotBot Twitter bot",

    "Parameters": {
        "ParamReplyToName" : {
            "Description"           : "Screen name of the Twitter account being replied to",
            "Type"                  : "String"
        },
        
        "ParamSource" : {
            "Description"           : "Source label of target tweets. This diffenciates between tweets from the bot and normal tweets on the target account.",
            "Type"                  : "String"
        },
        
        "ParamAppKey" : {
            "Description"           : "Application consumer key",
            "Type"                  : "String",
            "NoEcho"                : true,
        },
        
        "ParamAppSecret" : {
            "Description"           : "Application consumer key secret",
            "Type"                  : "String",
            "NoEcho"                : true,
        },
        
        "ParamUserKey" : {
            "Description"           : "Access token for the bot Twitter account",
            "Type"                  : "String",
            "NoEcho"                : true,
        },
        
        "ParamUserSecret" : {
            "Description"           : "Access token secret",
            "Type"                  : "String",
            "NoEcho"                : true,
        },
        
        "ParamApplication" : {
            "Description"           : "The name of the application associated with this stack",
            "Type"                  : "String",
            "Default"               : "GoodBotBot",
            "AllowedPattern"        : "[a-zA-Z0-9-._@]{1,255}",
            "ConstraintDescription" : "must be a valid tag value."
        },
        
        "ParamEnvironment" : {
            "Description"           : "The environment associated with the created resources: Production, Development, Testing, QA, Staging",
            "Type"                  : "String",
            "Default"               : "Production",
            "AllowedPattern"        : "[a-zA-Z0-9-._@]{1,255}",
            "ConstraintDescription" : "must be a valid tag value."
        }
    },

    "Resources" : {
        
        "LambdaExecutionRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "Description" : "Execution role for the Lambda function",
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [{
                        "Effect": "Allow",
                        "Principal": {
                            "Service": ["lambda.amazonaws.com"]
                        },
                        "Action": ["sts:AssumeRole"]
                    }]
                },
                "Policies": [{
                    "PolicyName": "GoodBotBot-execution-role-policy",
                    "PolicyDocument": {
                        "Version": "2012-10-17",
                        "Statement": [{
                            "Effect": "Allow",
                            "Action": ["logs:*"],
                            "Resource": "arn:aws:logs:*:*:*" 
                        }]
                    }
                }],
                "ManagedPolicyArns" : [
                    "arn:aws:iam::aws:policy/AWSXRayDaemonWriteAccess"
                ],
                "Tags" : [
                    {"Key": "Application",  "Value" : {"Ref" : "ParamApplication"}},
                    {"Key": "Environment",  "Value" : {"Ref" : "ParamEnvironment"}},
                    {"Key": "Name",         "Value" : {"Ref" : "ParamApplication"}}
                ]
            }
        },
        
        "LambdaDeployManagedPolicy" : {
            "Type"          : "AWS::IAM::ManagedPolicy",
            "Properties"    : {
                "Description"       : "Managed policy for Lambda function deployment (update code, create alias,  etc.)",
                "PolicyDocument"    : {
                    "Version"   : "2012-10-17", 
                    "Statement" : [
                        {
                            "Effect"        : "Allow",
                            "Action"        : [
                                "lambda:Get*",
                                "lambda:List*",
                                "lambda:CreateAlias",
                                "lambda:DeleteAlias",
                                "lambda:PublishVersion",
                                "lambda:UpdateAlias",
                                "lambda:UpdateFunctionCode"
                            ],
                            "Resource"      : [
                                {"Fn::GetAtt": ["LambdaFunction", "Arn"]}
                            ]
                        }
                    ]
                }
            }
        },
        
        "LambdaFunction": {
            "Type": "AWS::Lambda::Function",
            "Properties": {
                "Handler"       : "index.handler",
                "Runtime"       : "python3.7",
                "MemorySize"    : 128,
                "Timeout"       : 15,
                "Role"          : {"Fn::GetAtt" : ["LambdaExecutionRole", "Arn"]},
                "TracingConfig" : {
                    "Mode" : "Active"
                },
                "Code": {
                    "ZipFile":  { "Fn::Join": ["\n", [
                        "def handler(event, context):",
                        "    print('Hello World!')",
                        "    ",
                        "    return {",
                        "        'statusCode'    : 200,",
                        "        'body'          : {}",
                        "    }"
                    ]]}
                },
                "Environment" : {
                    "Variables" : {
                        "BOT_TARGET"        : {"Ref" : "ParamReplyToName"},
                        "BOT_SOURCE"        : {"Ref" : "ParamSource"},
                        "BOT_APP_KEY"       : {"Ref" : "ParamAppKey"},
                        "BOT_APP_SECRET"    : {"Ref" : "ParamAppSecret"},
                        "BOT_ACCESS_TOKEN"  : {"Ref" : "ParamUserKey"},
                        "BOT_TOKEN_SECRET"  : {"Ref" : "ParamUserSecret"}
                    }
                },
                "Tags" : [
                    {"Key": "Application",  "Value" : {"Ref" : "ParamApplication"}},
                    {"Key": "Environment",  "Value" : {"Ref" : "ParamEnvironment"}},
                    {"Key": "Name",         "Value" : {"Ref" : "ParamApplication"}}
                ]
            }
        },
        
        "EventRuleLambdaPermission": {
            "Type": "AWS::Lambda::Permission",
            "Properties": {
                "FunctionName"  : {"Ref": "LambdaFunction"},
                "Action"        : "lambda:InvokeFunction",
                "Principal"     : "events.amazonaws.com",
                "SourceArn"     : { "Fn::GetAtt": ["PeriodicEventRule", "Arn"] }
            }
        },
        
        "PeriodicEventRule" : {
            "Type" : "AWS::Events::Rule",
            "Properties" : {
                "Description"           : "Run the lambda function periodically to poll for new tweets",
                "State"                 : "ENABLED",
                "ScheduleExpression"    : "rate(18 minutes)",
                "Targets" : [{
                    "Arn"   : {"Fn::GetAtt": ["LambdaFunction", "Arn"]},
                    "Id"    : "LambdaFunction"
                }]
            }
        }
        
    },

    "Outputs" : {
        "FunctionName" : {
            "Description"   : "Name of the AWS Lambda function",
            "Value"         : {"Ref": "LambdaFunction"}
        }
    }
}
